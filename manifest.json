{
  "manifest_version": 3,
  "name": "Roblox Friends Text Replacer",
  "version": "1.0",
  "author": "cbùë•",
  "description": "Replaces 'connections' with 'friends' on Roblox website",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
